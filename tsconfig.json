{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "module": "ES2022",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "helmet": ["node_modules/helmet"]
    },
    "moduleResolution": "Node"
  }
}
